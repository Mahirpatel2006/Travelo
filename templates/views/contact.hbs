            <input type="date" name="lday"/>
          </div>
          <div class="inputBox">
            <h3>Email</h3>
            <input type="text" placeholder="personal Email" name="conemail"/>
          </div>
          <div class="inputBox">
            <h3>Contact Number</h3>
            <input type="number" placeholder="Contact No" name="connumber" />
          </div>
          <input type="submit" value="book now" class="btn" id="book-now-btn" />
        </form>
      </div>
    </section>

    <script>
     
      var options = {
