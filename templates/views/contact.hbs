<section class="book" id="book">
      <div class="row">
        <form action="/contact" method="POST">
          <div class="inputBox">
            <h3>where to</h3>
            <input type="text" placeholder="place name" name="name"/>
          </div>
          <div class="inputBox">
            <h3>how many</h3>
            <input type="number" placeholder="number of guests" name="pnumber"/>
          </div>
          <div class="inputBox">
            <h3>arrivals</h3>
            <input type="date" name="adate"/>
          </div>
          <div class="inputBox">
